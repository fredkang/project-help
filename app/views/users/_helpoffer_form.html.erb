
<div class="form-group help-topics">
	<%#= f.label :title, "New Topic" %>
	<%= f.text_field :title, class: "form-control", id: "add-topic-title-input",placeholder: "Topic e.g. Data analytics" %>
	<%= f.text_area :description, class: "form-control", id: "add-topic-description-input", placeholder: "Description e.g. I've worked as a data scientist at Google and Microsoft. I have experience with data analysis as well as infrastructure." %>
	<a href="" class="add-topic-submit-add">Submit and add another topic</a><br>
	<button class="add-topic-cancel btn btn-default">Cancel</button> 
	<button class="add-topic-submit btn btn-primary">Submit</button>
	<!-- <button class="add-topic-submit-add btn btn-success">Add another</button>  -->
</div>